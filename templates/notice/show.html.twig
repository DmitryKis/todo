{% extends 'base.html.twig' %}

{% block title %}Notice{% endblock %}

{% block body %}
    <h1>Notice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notice.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ notice.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ notice.Description }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ notice.Deadline ? notice.Deadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Done</th>
                <td>{{ notice.Done ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('notice_index') }}">back to list</a>

    <a href="{{ path('notice_edit', {'id': notice.id}) }}">edit</a>

    {{ include('notice/_delete_form.html.twig') }}
{% endblock %}
